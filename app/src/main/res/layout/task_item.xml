<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginTop="35dp"
    android:id="@+id/taskCardView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/siteIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/facebook_box"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/siteIcon"
            android:textSize="24dp"
            android:text="qweqweqweqweqweqwe"
            android:id="@+id/taskDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/taskDescription"
            android:id="@+id/siteLink"
            android:text="linkWEWEWE"/>
        <android.support.design.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:clickable="false"
            android:paddingTop="13dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="24dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:id="@+id/taskPrice"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>